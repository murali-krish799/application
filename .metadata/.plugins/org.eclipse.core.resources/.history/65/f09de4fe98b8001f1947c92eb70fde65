package com.krishsolutions.mutable;

/**we are demonstrate here mutable concept
 * of two ways
 *  those are
 *  StringBuffer version of 1.0
 *  StringBuilder version of 1.5
 * 
 */
public class MutableDemo {
	public static void main(String[] args) {
//		sb =babu modify to babu murali both are frnds
		StringBuffer sb= new StringBuffer("babu ");//1579572132
		System.out.println(sb.hashCode());
		System.out.println(sb);
		sb.append("murali both are frnds");
		System.out.println(sb);
		System.out.println(sb.hashCode());//1579572132
		
		StringBuffer append = sb.append("i change the data");
		
		System.out.println(append.hashCode());
		
		if(sb.hashCode()==append.hashCode()) {
			
			System.out.println("yes both are same");
		}
		
	}

}
